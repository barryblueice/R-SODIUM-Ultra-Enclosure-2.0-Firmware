#include <stdio.h>
#include "freertos/FreeRTOS.h"
#include "freertos/task.h"
#include "freertos/semphr.h"
#include "driver/mcpwm_prelude.h"
#include "driver/gpio.h"
#include "esp_log.h"

#define FAN_PWM_GPIO     33
#define FAN_RPM_GPIO     34
#define MCPWM_CLK_HZ     1000000UL   // 1 MHz timer resolution
#define FAN_PWM_FREQ_HZ  25000UL     // 25 kHz output
#define PERIOD_TICKS     (MCPWM_CLK_HZ / FAN_PWM_FREQ_HZ) // = 40 for 1MHz/25kHz
#define PULSES_PER_REV   2           // 风扇每转脉冲数
#define RPM_MEASURE_INTERVAL_MS 1000 // 1s测一次RPM

static const char *TAG = "FAN_PWM";

static mcpwm_cmpr_handle_t comparator = NULL;

// RPM 相关
static volatile uint32_t pulse_count = 0;
static SemaphoreHandle_t rpm_mutex;

// GPIO 中断回调
static void IRAM_ATTR rpm_isr_handler(void* arg)
{
    pulse_count++;
}

/**
 * @brief 设置风扇占空比 (0.0 ~ 1.0)
 */
static void fan_set_speed(float duty)
{
    if (duty < 0.0f) duty = 0.0f;
    if (duty > 1.0f) duty = 1.0f;

    uint32_t cmp = (uint32_t)(duty * (float)PERIOD_TICKS + 0.5f);

    if (cmp > PERIOD_TICKS) cmp = PERIOD_TICKS;

    if (duty >= 1.0f && PERIOD_TICKS > 0) cmp = PERIOD_TICKS - 1;

    ESP_ERROR_CHECK(mcpwm_comparator_set_compare_value(comparator, cmp));
    ESP_LOGI(TAG, "Set duty: %.2f%% -> cmp=%u (period=%u)", duty * 100.0f, cmp, (unsigned)PERIOD_TICKS);
}

/**
 * @brief 初始化 PWM 输出
 */
static void fan_pwm_init(void)
{
    mcpwm_timer_handle_t timer = NULL;
    mcpwm_oper_handle_t oper = NULL;
    mcpwm_gen_handle_t generator = NULL;

    mcpwm_timer_config_t timer_config = {
        .group_id = 0,
        .clk_src = MCPWM_TIMER_CLK_SRC_DEFAULT,
        .resolution_hz = MCPWM_CLK_HZ,
        .period_ticks = PERIOD_TICKS,
        .count_mode = MCPWM_TIMER_COUNT_MODE_UP,
    };
    ESP_ERROR_CHECK(mcpwm_new_timer(&timer_config, &timer));

    mcpwm_operator_config_t operator_config = {
        .group_id = 0,
    };
    ESP_ERROR_CHECK(mcpwm_new_operator(&operator_config, &oper));

    ESP_ERROR_CHECK(mcpwm_operator_connect_timer(oper, timer));

    mcpwm_comparator_config_t comparator_config = {
        .flags.update_cmp_on_tez = true,
    };
    ESP_ERROR_CHECK(mcpwm_new_comparator(oper, &comparator_config, &comparator));

    mcpwm_generator_config_t generator_config = {
        .gen_gpio_num = FAN_PWM_GPIO,
    };
    ESP_ERROR_CHECK(mcpwm_new_generator(oper, &generator_config, &generator));

    ESP_ERROR_CHECK(mcpwm_generator_set_action_on_timer_event(generator,
        MCPWM_GEN_TIMER_EVENT_ACTION(MCPWM_TIMER_DIRECTION_UP, MCPWM_TIMER_EVENT_EMPTY, MCPWM_GEN_ACTION_HIGH)));

    ESP_ERROR_CHECK(mcpwm_generator_set_action_on_compare_event(generator,
        MCPWM_GEN_COMPARE_EVENT_ACTION(MCPWM_TIMER_DIRECTION_UP, comparator, MCPWM_GEN_ACTION_LOW)));

    ESP_ERROR_CHECK(mcpwm_timer_enable(timer));
    ESP_ERROR_CHECK(mcpwm_timer_start_stop(timer, MCPWM_TIMER_START_NO_STOP));

    fan_set_speed(0.5f);
}

/**
 * @brief 初始化 RPM 读取
 */
static void fan_rpm_init(void)
{
    rpm_mutex = xSemaphoreCreateMutex();

    gpio_config_t io_conf = {
        .intr_type = GPIO_INTR_NEGEDGE,  // 下沿触发
        .mode = GPIO_MODE_INPUT,
        .pin_bit_mask = (1ULL << FAN_RPM_GPIO),
        .pull_up_en = GPIO_PULLUP_ENABLE, // 风扇输出一般需要上拉
        .pull_down_en = GPIO_PULLDOWN_DISABLE,
    };
    gpio_config(&io_conf);

    gpio_install_isr_service(0);
    gpio_isr_handler_add(FAN_RPM_GPIO, rpm_isr_handler, NULL);
}

/**
 * @brief 计算并打印 RPM 的任务
 */
static void rpm_task(void *arg)
{
    while (1) {
        vTaskDelay(pdMS_TO_TICKS(RPM_MEASURE_INTERVAL_MS));

        int16_t count = 0;
    xSemaphoreTake(rpm_mutex, portMAX_DELAY);
    count = pulse_count;
    pulse_count = 0;
    xSemaphoreGive(rpm_mutex);

    // 计算 RPM
    uint32_t rpm = ((uint32_t)count * 60000) / (PULSES_PER_REV * RPM_MEASURE_INTERVAL_MS);
    ESP_LOGI(TAG, "Fan RPM: %u", rpm);
    }
}

/**
 * 主程序
 */
void app_main(void)
{
    gpio_config_t io_conf = {
        .intr_type = GPIO_INTR_DISABLE,
        .mode = GPIO_MODE_OUTPUT,
        .pin_bit_mask = (1ULL << GPIO_NUM_35),
        .pull_up_en = GPIO_PULLUP_ENABLE,
        .pull_down_en = GPIO_PULLDOWN_DISABLE,
    };
    gpio_config(&io_conf);

    gpio_set_level(GPIO_NUM_35, 0x01);

    ESP_LOGI(TAG, "PERIOD_TICKS = %u", (unsigned)PERIOD_TICKS);

    fan_pwm_init();
    fan_rpm_init();

    // 创建 RPM 任务
    xTaskCreate(rpm_task, "rpm_task", 4096, NULL, 5, NULL);

    while (1) {
        fan_set_speed(0.0f);
        vTaskDelay(pdMS_TO_TICKS(10000));

        fan_set_speed(0.2f);
        vTaskDelay(pdMS_TO_TICKS(10000));

        fan_set_speed(0.5f);
        vTaskDelay(pdMS_TO_TICKS(10000));

        fan_set_speed(0.8f);
        vTaskDelay(pdMS_TO_TICKS(10000));

        fan_set_speed(1.0f);
        vTaskDelay(pdMS_TO_TICKS(10000));
    }
}
